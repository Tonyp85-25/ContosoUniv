@using ContosoUniv.Lib
@model ContosoUniv.Lib.PaginatedList<Student>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var nameOrder = ViewData["nameOrder"] is SortDirection.Descending ? SortDirection.Ascending : SortDirection.Descending;
}
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="Index" asp-route-nameOrder="@nameOrder"> LastName </a> 
           
        </th>
        <th>
            FirstMidName
        </th>
        <th>
            EnrollmentDate
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if ( Model.Count > 0)
    {
        @foreach (var student in Model)
        {
            @await Html.PartialAsync("_StudentLIstItem",student);
        }
    }
    </tbody>
</table>

<div class="align-baseline">
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex-1)" asp-route-nameOrder="@ViewData["nameOrder"]" class="btn btn-default @prevDisabled">Previous</a>
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex+1)" asp-route-nameOrder="@ViewData["nameOrder"]" class="btn btn-default @nextDisabled">Next</a>
</div>